<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upasana.home.graphmaker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash_Activity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".pie_graph"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Pie Graph"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".bar_graph"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Bar Graph"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".bubble"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Bubble Chart"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".line_graph"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Line Graph"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".scatter_graph"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Scatter Graph"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".donut"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Donut Graph"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".graph_add"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:label="Add Data"></activity>
        <activity
            android:name=".graph_draw"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Add Data"></activity>
        <activity
            android:name=".graph_add_saved"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Add Data"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>